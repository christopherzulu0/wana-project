generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  role        String   @default("teacher") // or 'admin'
  createdAt   DateTime @default(now())
  classes     Class[]  @relation("TeacherClasses")
  attendance  Attendance[] @relation("MarkedBy")
}

model Class {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  teacher     User?    @relation("TeacherClasses", fields: [teacherId], references: [id])
  teacherId   Int?
  createdAt   DateTime @default(now())
  classStudents ClassStudent[]
  attendance  Attendance[]
}

model Student {
  id          Int      @id @default(autoincrement())
  name        String
  email       String?  @unique
  registrationNumber String? @unique
  createdAt   DateTime @default(now())
  classStudents ClassStudent[]
  attendance  Attendance[]
}

model ClassStudent {
  id        Int      @id @default(autoincrement())
  class     Class    @relation(fields: [classId], references: [id])
  classId   Int
  student   Student  @relation(fields: [studentId], references: [id])
  studentId Int
  enrolledAt DateTime @default(now())

  @@unique([classId, studentId])
}

model Attendance {
  id         Int      @id @default(autoincrement())
  class      Class    @relation(fields: [classId], references: [id])
  classId    Int
  student    Student  @relation(fields: [studentId], references: [id])
  studentId  Int
  date       DateTime
  status     String   // 'present', 'absent', 'late', etc.
  markedBy   User?    @relation("MarkedBy", fields: [markedById], references: [id])
  markedById Int?
  markedAt   DateTime @default(now())

  @@unique([classId, studentId, date])
}
